<?xml version="1.0" encoding="UTF-8"?>
    <addon id="repository mykodibuildwizard" name="repository mykodibuildwizard" version="1.0.1" provider-name="{author}">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="{name}">
            <info compressed="false">https://raw.githubusercontent.com/godzillaroar/godzilla-v1/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/godzillaroar/godzilla-v1/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/godzillaroar/godzilla-v1/master/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>{summary}</summary>
            <description>{description}</description>
            <platform>all</platform>
    </extension>
</addon>